<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorPrimary" />

        <android.support.v7.widget.CardView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="16dp">

            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                fresco:backgroundImage="@color/gray"
                fresco:placeholderImage="@drawable/ic_dummy_user"
                fresco:progressBarAutoRotateInterval="1000"
                fresco:progressBarImage="@drawable/ic_refresh_black_24dp"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@android:color/white"
                fresco:roundingBorderWidth="2dp" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_image"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_background_gray"
                android:gravity="start"
                android:maxLines="1"
                android:padding="16dp"
                android:text="eslam faisal"
                android:textAlignment="viewStart"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_background_gray"
                android:drawableStart="@drawable/ic_call"
                android:drawablePadding="16dp"
                android:gravity="start"
                android:maxLines="1"
                android:padding="16dp"
                android:text="01067457665"
                android:textAlignment="viewStart"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_background_gray"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="16dp"
                android:gravity="start"
                android:maxLines="1"
                android:padding="16dp"
                android:text="eslam.faisal.ef@gmail.com"
                android:textAlignment="viewStart"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>